{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["xo", "prettier"],
  "overrides": [
    {
      "extends": ["xo-typescript", "prettier"],
      "files": "*.ts",
      "rules": {
        "no-unused-vars": "error",
        "@typescript-eslint/consistent-type-definitions": ["error", "interface"]
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-implicit-coercion": "off",
    "new-cap": [
      "error",
      {
        "capIsNewExceptions": ["Router"]
      }
    ],
    "no-console": "off"
  }
}
